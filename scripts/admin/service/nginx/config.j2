server {
    listen 80;
    listen 443 ssl http2;
    server_name {{ domain }};

    ssl_certificate /etc/nginx/ssl/{{ domain }}.crt;
    ssl_certificate_key /etc/nginx/ssl/{{ domain }}.key;

    location / {
        root /var/www/html;
        index index.html index.htm;
    }

    # Redirect HTTP to HTTPS
    if ($scheme = http) {
        return 301 https://$server_name$request_uri;
    }
}
